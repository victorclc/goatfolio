pipeline {
    agent {
        docker {
            image 'victorclc/node-serverless'
            args '-u 127:998 -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    environment {
        HOME="."
        SERVICE_PATH="${env.WORKSPACE}/services/corporate-events"
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id-dev')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key-dev')
        SLS_DEBUG='*'
    }
    stages {
        stage('Clone') {
            steps {
                git(
                    url: 'git@github.com:victorclc/goatfolio-serverless.git',
                    credentialsId: 'github-ssh',
                    branch: 'master'
                )
             }
        }
        stage('Tests') {
            steps {
                sh 'chmod +x run_tests.sh'
                sh './run_tests.sh'
            }
        }
        stage('Sonar') {
            steps {
                dir('services/corporate-events'){
                    sh 'sonar-scanner \
                        -Dsonar.projectKey=corporate-events \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=http://192.168.0.100:9000 \
                        -Dsonar.login=818fd5389bdf98b94785f2dacb531a451f750450'
                }
             }
        }
        stage('Common Resources Deploy') {
            steps {
                sh 'serverless deploy'
             }
        }
        stage('Service Deploy') {
            steps {
                 dir('services/corporate-events'){
                    sh 'npm install'
                    sh 'serverless deploy'
                }
            }
        }
    }
}